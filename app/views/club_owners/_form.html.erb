          <%= c.label :name, 'Name of the Club' %>
          <br>
          <%= c.text_field :name %>
        </div>
        <div class="field">
          <%= c.label :address, 'Address of the Club' %>
          <br>
          <%= c.text_field :address %>
        </div>
        <%= c.fields_for :workout do |w| %>
            <div class="field">
              <%= w.label :title, 'Default Workout of the club' %>
              <br>
              <%= w.text_field :title %>
            </div>
        <% end %>
    <% end %>
