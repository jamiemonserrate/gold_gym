<%= form_for(@club_owner) do |f| %>
    <% if @club_owner.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@club_owner.errors.count, "error") %> prohibited this club_owner from being saved:</h2>

          <ul>
            <% @club_owner.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :email %>
      <br>
      <%= f.text_field :email %>
